<Window x:Class="RBToolsContextMenu.UI.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RBToolsContextMenu.UI.Wpf"
        xmlns:views="clr-namespace:RBToolsContextMenu.UI.Wpf.Views"
        xmlns:viewmodels="clr-namespace:RBToolsContextMenu.UI.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Review board sender" Height="350" Width="525">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    
    <Grid>
        <TabControl>
            <TabItem Header="General">
                <views:GeneralView/>
            </TabItem>
            <TabItem Header="Console">
                <views:ConsoleView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
